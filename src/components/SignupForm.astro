---
export const partial = true;

type Props = {
  invalid?: boolean;
};
const { invalid } = Astro.props;
---

<form hx-post="/api/signup" hx-target-error="closest .error">
  <label for="email"
    >Email <input
      type="email"
      name="email"
      id="email"
      aria-invalid={!!invalid}
    /></label
  >
  <label for="username"
    >Username <input
      type="text"
      name="username"
      id="username"
      aria-invalid={!!invalid}
    /></label
  >
  <label for="password"
    >Password <input
      type="password"
      name="password"
      id="password"
      aria-invalid={!!invalid}
    /></label
  >
  <label for="passwordConfirm"
    >Confirm Password <input
      type="password"
      name="passwordConfirm"
      id="passwordConfirm"
      aria-invalid={!!invalid}
    /></label
  >
  <button type="submit">Signup</button>
</form>
